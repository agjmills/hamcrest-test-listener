{
    "name": "graze/hamcrest-test-listener",

    "description": ":crescent_moon: A PHPUnit test listener for the hamcrest assertion library.",

    "license": "MIT",

    "authors": [
        {
            "name": "Samuel Parkinson",
            "email": "sam@graze.com"
        }
    ],

    "autoload": {
        "psr-4": {
            "Hamcrest\\Adapter\\PHPUnit\\": "src/"
        }
    },

    "autoload-dev": {
        "classmap": [
            "tests/unit/"
        ]
    },

    "require": {
        "php": "^5.6 || ^7.0",
        "phpunit/phpunit": "^3.3.3 || ^4.0 || ^5.0",
        "hamcrest/hamcrest-php": "^1.2"
    },

    "require-dev": {
        "mockery/mockery": "dev-master#9c29a2"
    }
}
